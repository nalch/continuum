mixin nick(user)
  div(ng-if="userId === #{user}.publicId")
    span(class="glyphicon glyphicon-user spaced", aria-hidden="true")
    span(editable-text="#{user}.nick", onbeforesave="setNick($data)") {{ #{user}.nick || #{user}.publicId || "no user information" }}
  span(ng-if="userId !== #{user}.publicId") {{ #{user}.nick || #{user}.publicId || "no user information" }}

// let the page know, which user it is
input(type="hidden", name="userId", ng-model="userId", ng-init="userId='#{userId}'", value="#{userId}", disabled="disabled")

div(class="row row-offcanvas row-offcanvas-right")
  div(class="col-xs-12 col-sm-9")
    div(class="jumbotron")
      h3 Welcome to game {{ game.publicId }}
      p Follow these steps to start the game
      div(class="row")
                
        div(class="col-sm-6 col-md-4")
          div(class="thumbnail")
            img(src="/images/state_waiting.png", alt="invite other players")
            div(class="caption")
              h4 Step 1: Invite other players
              span
                ul
                  li wait for visitors
                  li share this #[a(href="{{ location.absUrl() }}") link]
                  li
                    a(href="mailto:?subject=Join a game of continuum&body=", class="btn btn-primary", role="button") Send mail to friend
        
        div(class="col-sm-6 col-md-4", ng-class="{'semi-transparent': game.visitors.length == 0}")
          div(class="thumbnail")
            img(src="/images/state_choose_opponent.png", alt="choose opponent")
            div(class="caption")
              h4 Step 2: Choose an opponent
              span Click on #[span(class="glyphicon glyphicon-screenshot spaced", aria-hidden="true")] symbol behind a visitor
        
        div(class="col-sm-6 col-md-4", ng-class="{'semi-transparent': !game.opponent}")
          div(class="thumbnail")
            img(src="/images/state_starting.png", alt="start the game")
            div(class="caption")
              h4 Step 3: Start the game
              a(ng-click="startGame()", class="btn btn-primary", role="button", ng-if="game.opponent") Start the game

  // sidebar
  div(class="col-xs-6 col-sm-3 sidebar-offcanvas", id="sidebar")
    div(class="panel panel-default")
      div(class="panel-heading")
        h3(class="panel-title") Owner
      div(class="panel-body")
        +nick("game.owner")
    div(class="panel panel-default")
      div(class="panel-heading")
        h3(class="panel-title") Opponent
      div(class="panel-body")
        +nick("game.opponent")
    div(class="list-group")
      b {{ game.visitors.length }} visitors
      span(class="list-group-item", ng-repeat="visitor in game.visitors")
        +nick("visitor")
        span(
          ng-if="isOwner()",
          class="glyphicon glyphicon-screenshot spaced",
          aria-hidden="true",
          ng-click="challengeUser(visitor, $index)"
        )